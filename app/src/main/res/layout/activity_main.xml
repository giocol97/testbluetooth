<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/scan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Start Connection"
                android:visibility="gone" />

            <TextView
                android:id="@+id/waitDiscoveryView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wait for IP discovery"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/speed_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Speed" />

                <TextView
                    android:id="@+id/direction_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="50px"
            android:text="Header: \n..."
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twistConnectionStatus"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:text="Twist Disconnected"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rosConnectionStatus"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF0000"
                android:text="Ros Disconnected"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/commandBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Write the command here..."
            android:inputType="text" />

        <Switch
            android:id="@+id/connectionTypeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Off=BLE \ On=Websocket"
            android:visibility="gone" />

        <Switch
            android:id="@+id/joystickSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Off=Radar View On=Joystick"
            android:visibility="gone" />

        <Button
            android:id="@+id/commandButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Command" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/brakeOnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BRAKE_ON" />

            <Button
                android:id="@+id/steeringTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Steering Test" />

            <Button
                android:id="@+id/circleTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="circle test" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/squareTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="square test" />
        </LinearLayout>

        <SurfaceView
            android:id="@+id/radar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <TableLayout
            android:id="@+id/joystickContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonGear0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gear 0" />

                    <Button
                        android:id="@+id/buttonGear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gear 1" />

                    <Button
                        android:id="@+id/buttonGear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gear 2" />

                    <Button
                        android:id="@+id/buttonGear3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gear 3" />

                    <Button
                        android:id="@+id/buttonGear4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gear 4" />

                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Steering:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/buttonSteeringN60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-60" />

                <Button
                    android:id="@+id/buttonSteeringN20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-20" />

                <Button
                    android:id="@+id/buttonSteering0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonSteeringP20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20" />

                <Button
                    android:id="@+id/buttonSteeringP60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="60" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>